@model IEnumerable<S4.SocialMedia.Entities.Models.AspNetPosts>

@{
    if(!User.Identity.IsAuthenticated)
    {
        Context.Response.Redirect("/Identity/Account/Login");
    }

    ViewData["Title"] = "Index";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Posts</h1>
            <p class="lead text-muted">Create a post.</p>
            <p>
                <a asp-action="create" class="btn btn-primary my-2">Create Post</a>
            </p>
        </div>

    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.Image" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <a asp-action="Edit" asp-route-id="@item.PkId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    </div>
                                    <small class="text-muted">@{item.Created.ToString("dd/MM@HH:mm");} @item.FkUser.UserName</small>
                                </div>
                            </div>
                        </div>
                    </div>;
                }
            </div>
        </div>
    </div>

</main>